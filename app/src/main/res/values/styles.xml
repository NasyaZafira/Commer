<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for Chip at Home -->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/primary_color</item>
        <item name="chipStrokeWidth">@dimen/_2dp</item>
        <item name="chipBackgroundColor">@color/chip_bg_color_at_home</item>
        <item name="android:textAppearance">@style/TextAppearance.Body.Chip</item>
        <item name="android:textColor">@color/chip_text_color_at_home</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="TextAppearance.Body.Chip" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <!-- Style for Bottom Sheet at Home -->
    <style name="ModalBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSize">@dimen/_48dp</item>
    </style>

    <!-- Style for Chip at New Post -->
    <style name="Widget.App.Chip.Tag" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipStrokeColor">@color/primary_color</item>
        <item name="chipStrokeWidth">@dimen/_2dp</item>
        <item name="chipBackgroundColor">@color/chip_bg_color_at_home</item>
        <item name="android:textAppearance">@style/TextAppearance.Body.Chip</item>
        <item name="android:textColor">@color/chip_text_color_at_home</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipIconVisible">true</item>
        <item name="chipIconSize">@dimen/_12dp</item>
        <item name="iconStartPadding">@dimen/_4dp</item>
    </style>

    <style name="TextAppearance.Body.Chip.Tag" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <!-- Style for Contact Us & FAQ -->
    <style name="ContactUs.Text.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/_28sp</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>
    <style name="ContactUs.Text.Heading" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_600</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="ContactUs.Text.Paragraph" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Style for Item at Transaction History -->
    <style name="Transaction.Text.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/_18sp</item>
    </style>
    <style name="Transaction.Text.Paragraph" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <!-- Style for Chip at Simpler Post -->
    <style name="Simpler.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/secondary_color</item>
        <item name="chipStrokeWidth">@dimen/_2dp</item>
        <item name="chipBackgroundColor">@color/chip_bg_color_at_simpler_post</item>
        <item name="android:textAppearance">@style/TextAppearance.Body.Chip</item>
        <item name="android:textColor">@color/chip_text_color_at_simpler_post</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <!-- Style for Tab Layout at Simpler Post -->
    <style name="Simpler.Widget.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/Simpler.TextAppearance.TabLayout</item>
    </style>
    <style name="Simpler.TextAppearance.TabLayout" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>